{
  "folders": [
    {
      "path": "."
    }
  ],
  "settings": {
    "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length", "88"],
    "editor.formatOnSave": true,
    "editor.rulers": [88],
    "files.exclude": {
      "**/__pycache__": true,
      "**/*.pyc": true,
      "**/.pytest_cache": true,
      "**/.venv": true
    },
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "[python]": {
      "editor.defaultFormatter": "ms-python.black-formatter",
      "editor.formatOnSave": true,
      "editor.codeActionsOnSave": {
        "source.organizeImports": true
      }
    }
  },
  "extensions": {
    "recommendations": [
      "ms-python.python",
      "ms-python.vscode-pylance",
      "ms-python.black-formatter",
      "ms-toolsai.jupyter",
      "visualstudioexptteam.vscodeintellicode"
    ]
  },
  "launch": {
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Current File",
        "type": "python",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "justMyCode": true
      },
      {
        "name": "Python: Floorplan Extractor",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/floorplan_extractor.py",
        "console": "integratedTerminal",
        "justMyCode": true
      },
      {
        "name": "Python: Evaluation Script",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/evaluate_results.py",
        "console": "integratedTerminal",
        "justMyCode": true
      }
    ]
  },
  "tasks": {
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Install Requirements",
        "type": "shell",
        "command": "pip install -r requirements.txt",
        "problemMatcher": []
      },
      {
        "label": "Run Extractor",
        "type": "shell",
        "command": "python floorplan_extractor.py",
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Clean Output",
        "type": "shell",
        "command": "rm -rf annotated_images/ extracted_results.json",
        "problemMatcher": []
      }
    ]
  }
}